@model IEnumerable<TeknoRoma.Business.DTOs.ProductDto>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-box-open"></i> Ürünler</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Yeni Ürün Ekle
    </a>
</div>

<!-- Filters Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Kategori</label>
                <select name="categoryId" class="form-select">
                    <option value="">Tüm Kategoriler</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(ViewBag.SelectedCategory == category.Id)">
                                @category.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Ara</label>
                <input type="text" name="searchTerm" class="form-control" placeholder="Ürün adı..." value="@ViewBag.SearchTerm">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products List -->
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card product-card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted small">
                            <i class="fas fa-tag"></i> @product.CategoryName
                        </p>

                        @if (product.DiscountPrice.HasValue)
                        {
                            <div class="mb-2">
                                <span class="text-decoration-line-through text-muted">@product.Price.ToString("C2")</span>
                                <br>
                                <span class="text-danger fw-bold fs-5">@product.DiscountPrice.Value.ToString("C2")</span>
                                <span class="badge bg-success ms-1">-%@product.DiscountPercentage</span>
                            </div>
                        }
                        else
                        {
                            <p class="fw-bold text-primary fs-5">@product.Price.ToString("C2")</p>
                        }

                        <div class="text-muted small mb-3">
                            <i class="fas fa-warehouse"></i> Stok: @product.Stock
                            @if (product.Stock > 0)
                            {
                                <span class="badge bg-success ms-1">Mevcut</span>
                            }
                            else
                            {
                                <span class="badge bg-danger ms-1">Tükendi</span>
                            }
                        </div>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm w-100 mb-2">
                                <i class="fas fa-info-circle"></i> Detaylar
                            </a>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteProduct(@product.Id, '@product.Name')">
                                    <i class="fas fa-trash"></i> Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Ürün bulunamadı.
    </div>
}

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function deleteProduct(id, name) {
            if (confirm(`"${name}" ürünü silmek istediğinize emin misiniz?`)) {
                const form = document.getElementById('deleteForm');
                form.action = `/Products/Delete/${id}`;
                form.submit();
            }
        }
    </script>
}
