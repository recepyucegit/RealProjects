@model IEnumerable<Product>
@{
    ViewData["Title"] = "Kritik Stok Durumu";
}

<div class="row">
    <div class="col-12">
        <h2><i class="bi bi-exclamation-triangle text-warning"></i> Kritik Stok Durumu</h2>
        <p class="text-muted">Stok seviyesi kritik olan ürünler (10 adet ve altı)</p>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-body">
                <h5 class="card-title text-warning">
                    <i class="bi bi-info-circle"></i> Bilgilendirme
                </h5>
                <p class="card-text mb-0">
                    Bu sayfada stok seviyesi kritik olan (10 adet ve altı) ürünler listelenmektedir.
                    Lütfen acilen sipariş verin.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title">Stok Durumu Göstergeleri</h5>
                <span class="badge bg-danger me-2">Tükendi (0)</span>
                <span class="badge bg-warning me-2">Kritik (1-10)</span>
                <span class="badge bg-success">Yeterli (10+)</span>
            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-box-seam"></i> Kritik Stok Ürünler (@Model.Count() adet)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Barkod</th>
                            <th>Ürün Adı</th>
                            <th>Kategori</th>
                            <th>Tedarikçi</th>
                            <th>Birim Fiyat</th>
                            <th class="text-center">Stok Miktarı</th>
                            <th class="text-center">Durum</th>
                            <th>Son Güncelleme</th>
                            <th class="text-center">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.OrderBy(p => p.UnitsInStock))
                        {
                            <tr class="@(product.UnitsInStock == 0 ? "table-danger" : "table-warning")">
                                <td>
                                    <code>@product.Barcode</code>
                                </td>
                                <td>
                                    <strong>@product.Name</strong>
                                </td>
                                <td>
                                    @(product.Category?.Name ?? "Kategori Yok")
                                </td>
                                <td>
                                    @(product.Supplier?.Name ?? "Tedarikçi Yok")
                                </td>
                                <td>
                                    <strong>@product.UnitPrice.ToString("N2") TL</strong>
                                </td>
                                <td class="text-center">
                                    <span class="badge @(product.UnitsInStock == 0 ? "bg-danger" : "bg-warning") fs-6">
                                        @product.UnitsInStock
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (product.StockStatus == StockStatus.Tukendi)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Tükendi
                                        </span>
                                    }
                                    else if (product.StockStatus == StockStatus.Kritik)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle"></i> Kritik
                                        </span>
                                    }
                                </td>
                                <td>
                                    @(product.ModifiedDate?.ToString("dd.MM.yyyy HH:mm") ?? product.CreatedDate.ToString("dd.MM.yyyy HH:mm"))
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-primary"
                                            onclick="orderProduct(@product.ID, '@product.Name')"
                                            title="Sipariş Ver">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-success"
                                            onclick="updateStock(@product.ID, '@product.Name', @product.UnitsInStock)"
                                            title="Stok Güncelle">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
        </div>
    </div>

    <!-- Özet İstatistikler -->
    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger">@Model.Count(p => p.UnitsInStock == 0)</h3>
                    <p class="mb-0">Stokta Yok</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.Count(p => p.UnitsInStock > 0 && p.UnitsInStock <= 10)</h3>
                    <p class="mb-0">Kritik Seviye</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.Sum(p => p.UnitsInStock * p.UnitPrice).ToString("N2") TL</h3>
                    <p class="mb-0">Toplam Değer</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-check-circle"></i> Harika!
        </h4>
        <p class="mb-0">Kritik stok seviyesinde ürün bulunmamaktadır. Tüm ürünlerin stok durumu iyidir.</p>
    </div>
}

<div class="row mt-3">
    <div class="col-12">
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
        <a asp-action="OutOfStock" class="btn btn-danger">
            <i class="bi bi-x-circle"></i> Stokta Olmayan Ürünler
        </a>
        <button type="button" class="btn btn-success" onclick="window.print()">
            <i class="bi bi-printer"></i> Yazdır
        </button>
    </div>
</div>

<!-- Stok Güncelleme Modal -->
<div class="modal fade" id="updateStockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Stok Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateStockForm">
                    <input type="hidden" id="updateProductId" />
                    <div class="mb-3">
                        <label class="form-label">Ürün:</label>
                        <p id="updateProductName" class="fw-bold"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mevcut Stok:</label>
                        <p id="currentStock" class="text-muted"></p>
                    </div>
                    <div class="mb-3">
                        <label for="newStock" class="form-label">Yeni Stok Miktarı:</label>
                        <input type="number" class="form-control" id="newStock" min="0" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" onclick="saveStockUpdate()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function orderProduct(productId, productName) {
            if (confirm(`${productName} için sipariş vermek istiyor musunuz?`)) {
                // Burada sipariş verme işlemi yapılabilir
                alert('Sipariş verme özelliği yakında eklenecek');
            }
        }

        let updateModal;

        function updateStock(productId, productName, currentStock) {
            document.getElementById('updateProductId').value = productId;
            document.getElementById('updateProductName').textContent = productName;
            document.getElementById('currentStock').textContent = currentStock + ' adet';
            document.getElementById('newStock').value = currentStock;

            updateModal = new bootstrap.Modal(document.getElementById('updateStockModal'));
            updateModal.show();
        }

        async function saveStockUpdate() {
            const productId = document.getElementById('updateProductId').value;
            const newStock = document.getElementById('newStock').value;

            try {
                const response = await fetch(`/Depo/Stock/UpdateStock`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: parseInt(productId),
                        newStock: parseInt(newStock)
                    })
                });

                if (response.ok) {
                    alert('Stok başarıyla güncellendi!');
                    updateModal.hide();
                    location.reload();
                } else {
                    alert('Stok güncelleme sırasında hata oluştu');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Stok güncelleme sırasında hata oluştu');
            }
        }
    </script>
}
