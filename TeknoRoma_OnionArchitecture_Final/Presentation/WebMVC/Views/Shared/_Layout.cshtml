@* ===================================================================================
   TEKNOROMA MVC - PROFESYONEL ADMIN LAYOUT
   ===================================================================================

   Modern ve responsive admin panel tasarimi.
   Bootstrap 5 + Custom CSS + JavaScript

   =================================================================================== *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="TeknoRoma Elektronik Market Yonetim Sistemi" />
    <title>@ViewData["Title"] - TeknoRoma</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- =========================================================================
         NAVBAR (Ust Menu)
         ========================================================================= -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-main fixed-top">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-cpu"></i>
                <span>TeknoRoma</span>
            </a>

            <!-- Mobil Menu Toggle -->
            <button class="btn btn-link text-white d-lg-none mobile-menu-toggle" type="button">
                <i class="bi bi-list fs-4"></i>
            </button>

            <!-- Sag Taraf -->
            <div class="d-flex align-items-center ms-auto">
                <!-- Arama -->
                <div class="d-none d-md-block me-3">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control bg-white bg-opacity-10 border-0 text-white"
                               placeholder="Ara... (F2)" style="width: 200px;">
                        <button class="btn btn-light btn-sm" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Bildirimler -->
                <div class="dropdown me-3">
                    <a class="nav-link text-white position-relative" href="#" data-bs-toggle="dropdown">
                        <i class="bi bi-bell fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                              style="font-size: 0.65rem;">
                            3
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end notification-dropdown shadow-lg">
                        <div class="dropdown-header d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Bildirimler</span>
                            <a href="#" class="text-primary small">Tumunu Oku</a>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item notification-item unread" href="/Products/LowStock">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="badge bg-warning rounded-circle p-2">
                                        <i class="bi bi-exclamation-triangle"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p class="mb-1 fw-medium">Kritik Stok Uyarisi</p>
                                    <small class="text-muted">5 urun kritik seviyede</small>
                                </div>
                            </div>
                        </a>
                        <a class="dropdown-item notification-item unread" href="/Sales/Pending">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="badge bg-info rounded-circle p-2">
                                        <i class="bi bi-cart"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p class="mb-1 fw-medium">Yeni Satis</p>
                                    <small class="text-muted">Depoya urun hazirlama bildirimi</small>
                                </div>
                            </div>
                        </a>
                        <a class="dropdown-item notification-item" href="/TechnicalServices">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <span class="badge bg-danger rounded-circle p-2">
                                        <i class="bi bi-wrench"></i>
                                    </span>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p class="mb-1 fw-medium">Teknik Servis Talebi</p>
                                    <small class="text-muted">Yeni acik talep eklendi</small>
                                </div>
                            </div>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-center py-2" href="#">
                            <small>Tum Bildirimleri Gor</small>
                        </a>
                    </div>
                </div>

                <!-- Kullanici Menu -->
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                        <div class="avatar me-2">
                            <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center"
                                 style="width: 36px; height: 36px;">
                                <i class="bi bi-person fs-5"></i>
                            </div>
                        </div>
                        <div class="d-none d-md-block">
                            <span class="d-block small fw-medium">@(Context.Session.GetString("UserName") ?? "Misafir")</span>
                            <span class="d-block small opacity-75" style="font-size: 0.7rem;">@(Context.Session.GetString("UserRole") ?? "Ziyaretci")</span>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <div class="dropdown-header">
                                <strong>@(Context.Session.GetString("UserName") ?? "Misafir")</strong>
                                <br><small class="text-muted">@(Context.Session.GetString("UserEmail") ?? "Giriş yapılmadı")</small>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Ayarlar</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-question-circle me-2"></i>Yardim</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left;">
                                    <i class="bi bi-box-arrow-right me-2"></i>Cikis Yap
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- =========================================================================
         SIDEBAR (Sol Menu)
         ========================================================================= -->
    <nav class="sidebar">
        <!-- Sidebar Toggle -->
        <div class="p-3 d-none d-lg-block">
            <button class="btn btn-sm btn-outline-light w-100 sidebar-toggle">
                <i class="bi bi-chevron-left"></i>
                <span class="ms-2">Menu</span>
            </button>
        </div>

        <div class="sidebar-menu">
            <!-- Ana Menu -->
            <div class="menu-header">Ana Menu</div>
            <div class="menu-item">
                <a href="/" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i>
                    <span class="menu-text">Dashboard</span>
                </a>
            </div>

            <!-- Satis -->
            <div class="menu-header">Satis Islemleri</div>
            <div class="menu-item">
                <a href="/Sales" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Sales" ? "active" : "")">
                    <i class="bi bi-cart3"></i>
                    <span class="menu-text">Satislar</span>
                    <span class="menu-badge">12</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Sales/Create" class="menu-link">
                    <i class="bi bi-cart-plus"></i>
                    <span class="menu-text">Yeni Satis</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Customers" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "active" : "")">
                    <i class="bi bi-people"></i>
                    <span class="menu-text">Musteriler</span>
                </a>
            </div>

            <!-- Stok -->
            <div class="menu-header">Stok Yonetimi</div>
            <div class="menu-item">
                <a href="/Products" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">
                    <i class="bi bi-box-seam"></i>
                    <span class="menu-text">Urunler</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Products/LowStock" class="menu-link">
                    <i class="bi bi-exclamation-triangle"></i>
                    <span class="menu-text">Kritik Stok</span>
                    <span class="menu-badge bg-warning text-dark">5</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Categories" class="menu-link">
                    <i class="bi bi-tags"></i>
                    <span class="menu-text">Kategoriler</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Suppliers" class="menu-link">
                    <i class="bi bi-truck"></i>
                    <span class="menu-text">Tedarikciler</span>
                </a>
            </div>

            <!-- Yonetim -->
            <div class="menu-header">Yonetim</div>
            <div class="menu-item">
                <a href="/Employees" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employees" ? "active" : "")">
                    <i class="bi bi-person-badge"></i>
                    <span class="menu-text">Calisanlar</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Expenses" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Expenses" ? "active" : "")">
                    <i class="bi bi-cash-stack"></i>
                    <span class="menu-text">Giderler</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/TechnicalServices" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TechnicalServices" ? "active" : "")">
                    <i class="bi bi-wrench"></i>
                    <span class="menu-text">Teknik Servis</span>
                    <span class="menu-badge">3</span>
                </a>
            </div>

            <!-- Raporlar -->
            <div class="menu-header">Raporlar</div>
            <div class="menu-item">
                <a href="/Reports" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                    <i class="bi bi-graph-up"></i>
                    <span class="menu-text">Raporlar</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Reports/Sales" class="menu-link">
                    <i class="bi bi-file-earmark-bar-graph"></i>
                    <span class="menu-text">Satis Raporu</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Reports/Stock" class="menu-link">
                    <i class="bi bi-file-earmark-text"></i>
                    <span class="menu-text">Stok Raporu</span>
                </a>
            </div>

            <!-- Ayarlar -->
            <div class="menu-header">Sistem</div>
            <div class="menu-item">
                <a href="/Stores" class="menu-link">
                    <i class="bi bi-shop"></i>
                    <span class="menu-text">Magazalar</span>
                </a>
            </div>
            <div class="menu-item">
                <a href="/Settings" class="menu-link">
                    <i class="bi bi-gear"></i>
                    <span class="menu-text">Ayarlar</span>
                </a>
            </div>
        </div>

        <!-- Sidebar Footer -->
        <div class="mt-auto p-3 border-top border-secondary">
            <div class="d-flex align-items-center text-white-50 small">
                <i class="bi bi-clock me-2"></i>
                <span id="currentTime">--:--</span>
            </div>
        </div>
    </nav>

    <!-- =========================================================================
         MAIN CONTENT
         ========================================================================= -->
    <main class="main-content" style="margin-top: var(--navbar-height);">
        <!-- Toast Container -->
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;"></div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Page Content -->
        @RenderBody()
    </main>

    <!-- =========================================================================
         SCRIPTS
         ========================================================================= -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <!-- Saat guncelleme -->
    <script>
        function updateTime() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
            document.getElementById('currentTime').textContent = timeStr;
        }
        updateTime();
        setInterval(updateTime, 60000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
