@*
===================================================================================
TEKNOROMA - LOGIN LAYOUT (Minimal Layout)
===================================================================================

AMAÇ:
Login, Register gibi kimlik doğrulama sayfaları için minimal layout
Navbar, sidebar, kullanıcı bilgisi gösterilmez

FARK:
- _Layout.cshtml: Navbar + Sidebar + User Info (giriş yapmış kullanıcılar için)
- _LoginLayout.cshtml: Sadece sayfa içeriği (giriş yapmamış kullanıcılar için)

KULLANIM:
@{
    Layout = "_LoginLayout";
}
===================================================================================
*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="TeknoRoma Elektronik Market Yonetim Sistemi" />
    <title>@ViewData["Title"] - TeknoRoma</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Login Page Specific Styles -->
    <style>
        /* Full height background */
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Inter', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Card shadow effect */
        .card {
            border: none;
            border-radius: 1rem;
        }

        /* Primary color customization */
        .bg-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }

        /* Button hover effect */
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(50, 50, 93, .1), 0 3px 6px rgba(0, 0, 0, .08);
            transition: all 0.3s ease;
        }

        /* Input focus effect */
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        /* Alert styling */
        .alert-info {
            background-color: #e7f3ff;
            border-color: #b3d9ff;
            color: #004085;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- MAIN CONTENT - No navbar, no sidebar -->
    <main class="container">
        <!-- Alert Messages (TempData) -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; max-width: 500px;" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; max-width: 500px;" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; max-width: 500px;" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Page Content (Login Form) -->
        @RenderBody()
    </main>

    <!-- SCRIPTS -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Page Specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
