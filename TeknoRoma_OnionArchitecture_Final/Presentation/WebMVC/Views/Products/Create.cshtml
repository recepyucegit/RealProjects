@model WebMVC.Models.ProductViewModel
@{
    ViewData["Title"] = "Yeni Urun";
}

@* ===================================================================================
   TEKNOROMA - YENI URUN EKLEME
   =================================================================================== *@

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]
    </h1>
    <a href="/Products" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Geri Don
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Urun Bilgileri</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Temel Bilgiler -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted mb-3"><i class="bi bi-info-circle me-2"></i>Temel Bilgiler</h6>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ornek: Apple iPhone 15 Pro 256GB" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Barcode" class="form-label"></label>
                            <input asp-for="Barcode" class="form-control" placeholder="8690123456789" />
                            <span asp-validation-for="Barcode" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Urun ozellikleri ve aciklamasi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Fiyat ve Stok -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted mb-3"><i class="bi bi-currency-lira me-2"></i>Fiyat ve Stok</h6>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="UnitPrice" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="UnitPrice" class="form-control" placeholder="0.00" />
                                <span class="input-group-text">TL</span>
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="UnitsInStock" class="form-label"></label>
                            <input asp-for="UnitsInStock" class="form-control" type="number" min="0" />
                            <span asp-validation-for="UnitsInStock" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="CriticalStockLevel" class="form-label"></label>
                            <input asp-for="CriticalStockLevel" class="form-control" type="number" min="1" />
                            <span asp-validation-for="CriticalStockLevel" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Kategori ve Tedarikci -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted mb-3"><i class="bi bi-tags me-2"></i>Kategori ve Tedarikci</h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                                <option value="">-- Kategori Secin --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SupplierId" class="form-label"></label>
                            <select asp-for="SupplierId" asp-items="@ViewBag.Suppliers" class="form-select">
                                <option value="">-- Tedarikci Secin --</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Gorsel ve Durum -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted mb-3"><i class="bi bi-image me-2"></i>Gorsel ve Durum</h6>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label d-block">&nbsp;</label>
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>
                        </div>
                    </div>

                    <!-- Butonlar -->
                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a href="/Products" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-1"></i>Iptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Onizleme -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Onizleme</h5>
            </div>
            <div class="card-body text-center">
                <div id="previewImage" class="mb-3">
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                        <i class="bi bi-image text-muted fs-1"></i>
                    </div>
                </div>
                <h5 id="previewName" class="mb-1">Urun Adi</h5>
                <p id="previewBarcode" class="text-muted small mb-2">
                    <code>Barkod</code>
                </p>
                <h4 id="previewPrice" class="text-primary mb-3">0.00 TL</h4>
                <span id="previewStock" class="badge bg-secondary">0 adet</span>
            </div>
        </div>

        <!-- Ipuclari -->
        <div class="card shadow-sm mt-3">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Ipuclari</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Barkod numarasi benzersiz olmalidir
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Kritik stok seviyesi uyari icin kullanilir
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check text-success me-2"></i>
                        Gorsel URL bos birakilabilir
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Form alanlari degistiginde onizleme guncelle
        $('#Name').on('input', function() {
            $('#previewName').text($(this).val() || 'Urun Adi');
        });

        $('#Barcode').on('input', function() {
            $('#previewBarcode code').text($(this).val() || 'Barkod');
        });

        $('#UnitPrice').on('input', function() {
            var price = parseFloat($(this).val()) || 0;
            $('#previewPrice').text(price.toLocaleString('tr-TR', { minimumFractionDigits: 2 }) + ' TL');
        });

        $('#UnitsInStock').on('input', function() {
            var stock = parseInt($(this).val()) || 0;
            var critical = parseInt($('#CriticalStockLevel').val()) || 10;
            var badge = $('#previewStock');

            badge.text(stock + ' adet');
            badge.removeClass('bg-success bg-warning bg-danger');

            if (stock <= 0) {
                badge.addClass('bg-danger');
            } else if (stock <= critical) {
                badge.addClass('bg-warning');
            } else {
                badge.addClass('bg-success');
            }
        });

        $('#ImageUrl').on('input', function() {
            var url = $(this).val();
            if (url) {
                $('#previewImage').html('<img src="' + url + '" class="img-fluid rounded" style="max-height: 150px;" onerror="this.onerror=null; this.src=\'/images/no-image.png\';">');
            } else {
                $('#previewImage').html('<div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;"><i class="bi bi-image text-muted fs-1"></i></div>');
            }
        });
    });
</script>
}
