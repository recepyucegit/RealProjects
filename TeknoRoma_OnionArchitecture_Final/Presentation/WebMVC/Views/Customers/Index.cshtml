@model IEnumerable<Domain.Entities.Customer>
@{
    ViewData["Title"] = "Musteriler";
}

@* ===================================================================================
   TEKNOROMA - MÜŞTERİ LİSTESİ
   ===================================================================================

   Tüm müşterilerin DataTables ile gösterildiği liste sayfası.
   Arama, sıralama, filtreleme ve sayfalama özellikleri.

   =================================================================================== *@

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-people me-2"></i>@ViewData["Title"]
    </h1>
    <div>
        <a href="/Customers/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Musteri
        </a>
    </div>
</div>

<!-- Filtre Kartları -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card stat-card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-people text-primary fs-1 mb-2 d-block"></i>
                <h3 class="mb-1">@Model.Count()</h3>
                <small class="text-muted">Toplam Musteri</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-check-circle text-success fs-1 mb-2 d-block"></i>
                <h3 class="mb-1">@Model.Count(c => c.IsActive)</h3>
                <small class="text-muted">Aktif Musteri</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check text-info fs-1 mb-2 d-block"></i>
                <h3 class="mb-1">@Model.Count(c => c.RegistrationDate >= DateTime.Now.AddMonths(-1))</h3>
                <small class="text-muted">Son 30 Gun</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-envelope text-warning fs-1 mb-2 d-block"></i>
                <h3 class="mb-1">@Model.Count(c => !string.IsNullOrEmpty(c.Email))</h3>
                <small class="text-muted">Email'li Musteri</small>
            </div>
        </div>
    </div>
</div>

<!-- Müşteri Tablosu -->
<div class="card shadow-sm">
    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-table me-2"></i>Musteri Listesi</h5>
        <div class="btn-group btn-group-sm" role="group">
            <button type="button" class="btn btn-outline-secondary" id="btnExportExcel">
                <i class="bi bi-file-earmark-excel me-1"></i>Excel
            </button>
            <button type="button" class="btn btn-outline-secondary" id="btnExportPdf">
                <i class="bi bi-file-earmark-pdf me-1"></i>PDF
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="customersTable" class="table table-hover mb-0" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>TC No</th>
                        <th>Ad Soyad</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Sehir</th>
                        <th>Kayit Tarihi</th>
                        <th>Durum</th>
                        <th>Islemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        var statusClass = customer.IsActive ? "bg-success" : "bg-secondary";

                        <tr>
                            <td>
                                <code class="small">@customer.IdentityNumber</code>
                            </td>
                            <td>
                                <a href="/Customers/Details/@customer.Id" class="text-decoration-none fw-medium">
                                    @customer.FullName
                                </a>
                                @if (customer.Gender.HasValue)
                                {
                                    <small class="text-muted">
                                        @(customer.Gender == Domain.Enums.Gender.Erkek ? "(E)" : customer.Gender == Domain.Enums.Gender.Kadin ? "(K)" : "")
                                    </small>
                                }
                            </td>
                            <td>
                                <a href="tel:@customer.Phone" class="text-decoration-none">
                                    @customer.Phone
                                </a>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(customer.Email))
                                {
                                    <a href="mailto:@customer.Email" class="text-decoration-none small">
                                        @customer.Email
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(customer.City))
                                {
                                    <span class="badge bg-light text-dark">@customer.City</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @customer.RegistrationDate.ToString("dd.MM.yyyy")
                            </td>
                            <td>
                                <span class="badge @statusClass">
                                    @(customer.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/Customers/Details/@customer.Id" class="btn btn-outline-info" title="Detay">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/Customers/Edit/@customer.Id" class="btn btn-outline-primary" title="Duzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-delete"
                                            data-id="@customer.Id"
                                            data-name="@customer.FullName"
                                            title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // DataTables başlat
        var table = $('#customersTable').DataTable({
            responsive: true,
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
            },
            order: [[1, 'asc']], // Ad Soyad'a göre sırala
            columnDefs: [
                { orderable: false, targets: [7] }, // İşlemler kolonu sıralanamaz
                { className: 'text-center', targets: [6, 7] }
            ],
            pageLength: 25,
            lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tumu"]]
        });

        // Silme işlemi
        $(document).on('click', '.btn-delete', function() {
            var id = $(this).data('id');
            var name = $(this).data('name');

            TeknoRoma.confirm(
                'Musteri Sil',
                `<strong>${name}</strong> adli musteriyi silmek istediginize emin misiniz?<br><br>` +
                '<span class="text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Bu islem geri alinamaz!</span>',
                function() {
                    $.ajax({
                        url: '/Customers/Delete',
                        type: 'POST',
                        data: { id: id },
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(result) {
                            TeknoRoma.toast('Musteri silindi.', 'success');
                            setTimeout(() => location.reload(), 1000);
                        },
                        error: function() {
                            TeknoRoma.toast('Bir hata olustu.', 'error');
                        }
                    });
                }
            );
        });

        // Excel export
        $('#btnExportExcel').click(function() {
            TeknoRoma.toast('Excel dosyasi hazirlaniyor...', 'info');
            // TODO: Implement Excel export
        });

        // PDF export
        $('#btnExportPdf').click(function() {
            TeknoRoma.toast('PDF dosyasi hazirlaniyor...', 'info');
            // TODO: Implement PDF export
        });
    });
</script>
@Html.AntiForgeryToken()
}
